{
    "extends": "solhint:recommended",
    "rules": {
        "compiler-version": [
            "error",
            "^0.8.0"
        ],
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "no-console": "off",
        "no-unused-import": "warn",
        "reason-string": [
            "warn",
            {
                "maxLength": 64
            }
        ]
    }
}